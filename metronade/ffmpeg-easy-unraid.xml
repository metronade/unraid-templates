<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
  <Name>FFmpeg-Easy-Unraid</Name>
  <Repository>metronade/ffmpeg-easy-unraid</Repository>
  <Registry>https://hub.docker.com/r/metronade/ffmpeg-easy-unraid</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/metronade/ffmpeg-easy-unraid/issues</Support>
  <Project>https://github.com/metronade/ffmpeg-easy-unraid</Project>
  <Overview>
    FFmpeg-Easy-Unraid is a "Simple H265 and AV1 Batch Transcoder".&#13;
    &#13;
    [b]Features:[/b]&#13;
    * [b]Workflow:[/b] Monitors /import, converts, moves originals to /import/finished, outputs to /export.&#13;
    * [b]Codecs:[/b] H.265 (HEVC) and AV1.&#13;
    * [b]Hardware:[/b] CPU, Nvidia (NVENC), Intel (QuickSync/Arc).&#13;
    * [b]Safety:[/b] Detects CPU pinning. Limits threads if no pinning is detected.&#13;
    * [b]Stats:[/b] Detailed space savings (GB/MB) report.&#13;
  </Overview>
  <Category>MediaApp:Video Productivity:Tools</Category>
  <WebUI/>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/metronade/ffmpeg-easy-unraid/main/icon.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <Date>1700000000</Date>
  <DonateText/>
  <DonateLink/>
  <Description>Simple H265 and AV1 Batch Transcoder</Description>
  <Networking>
    <Mode>bridge</Mode>
    <Publish/>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/Isos/Input/</HostDir>
      <ContainerDir>/import</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/Isos/Output/</HostDir>
      <ContainerDir>/export</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value>cpu_h265</Value>
      <Name>Encoding Method</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>default</Value>
      <Name>Preset</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>0</Value>
      <Name>CPU Threads</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>Quality (CRF)</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>Quality (CQ)</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>99</Value>
      <Name>Unraid UID</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>100</Value>
      <Name>Unraid GID</Name>
      <Mode/>
    </Variable>
     <Variable>
      <Value/>
      <Name>Custom FFmpeg Args</Name>
      <Mode/>
    </Variable>
  </Environment>
  
  <Config Name="Input Path (Source)" Target="/import" Default="/mnt/user/Isos/Input/" Mode="rw" Description="Path to source files. Originals move to /finished after success." Type="Path" Display="always" Required="true" Mask="false"/>
  <Config Name="Output Path (Destination)" Target="/export" Default="/mnt/user/Isos/Output/" Mode="rw" Description="Destination for converted files." Type="Path" Display="always" Required="true" Mask="false"/>
  <Config Name="Encoding Method" Target="ENCODE_METHOD" Default="cpu_h265" Mode="" Description="cpu_h265, cpu_av1, nvidia_h265, nvidia_av1, intel_h265, intel_av1" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="Preset" Target="ENCODE_PRESET" Default="default" Mode="" Description="'default' (recommended) or manual (slow, fast, p1-p7)." Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="Quality (CRF - CPU/Intel)" Target="ENCODE_CRF" Default="" Mode="" Description="Lower = Better. Empty = Smart Default (18/24)." Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="Quality (CQ - Nvidia)" Target="ENCODE_CQ" Default="" Mode="" Description="Lower = Better. Empty = Smart Default (19/24)." Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="CPU Threads" Target="ENCODE_THREADS" Default="0" Mode="" Description="0 = Auto (Safety Mode). Set number to force." Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="Custom FFmpeg Args" Target="FFMPEG_CUSTOM_ARGS" Default="" Mode="" Description="Override audio/sub args (Default: -c:a copy -c:s copy)." Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="Unraid User ID" Target="UNRAID_UID" Default="99" Mode="" Description="UID" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="Unraid Group ID" Target="UNRAID_GID" Default="100" Mode="" Description="GID" Type="Variable" Display="advanced" Required="false" Mask="false"/>
</Container>
